    <!-- Title bar declarations                                   -->
    <!-- ========================================================= -->
    <titlebars>
        <!-- Part / Modeling -->
        <titlebar id="sd.part.titlebar"
                  workbench="workbench.part"
                  label="SD Part TitleBar"/>

        <!-- Sketch environment -->
        <titlebar id="sd.sketch.titlebar"
                  workbench="workbench.sketch"
                  label="SD Sketch TitleBar"/>

        <!-- Assembly -->
        <titlebar id="sd.asm.titlebar"
                  workbench="workbench.assembly"
                  label="SD Assembly TitleBar"/>

        <!-- Home -->
        <titlebar id="sd.home.titlebar"
                  workbench="workbench.home"
                  label="SD Home TitleBar"/>

        <!-- Drawing -->
        <titlebar id="sd.drawing.titlebar"
                  workbench="workbench.drawing"
                  label="SD Drawing TitleBar"/>

        <!-- Manufacturing -->
        <titlebar id="sd.mfg.titlebar"
                  workbench="workbench.mfg"
                  label="SD Manufacturing TitleBar"/>

        <!-- BIM -->
        <titlebar id="sd.bim.titlebar"
                  workbench="workbench.bim"
                  label="SD Bim TitleBar"/>
    </titlebars>


    <!-- ========================================================= -->
    <!-- Title bar layouts                                         -->
    <!-- ========================================================= -->
    <titlebar-layouts>

        <!-- ===================== Part / Modeling ===================== -->
        <layout titlebar="sd.part.titlebar">

            <!-- Left area: App + quick access commands -->
            <area id="left" order="10">

                <!-- app: SolidDesigner application button (left-most entry) -->
                <control type="brand-button"
                         id="app"
                         commandRef="ui.appMenu"
                         order="5"
                         iconRef="app"
                         tooltip="SolidDesigner"/>

                <!-- QAT: new/open/save/undo/redo/regenerate/windows/dropdown -->
                <control type="command-button"
                         id="new"
                         commandRef="file.new"
                         order="10"
                         iconRef="new"/>

                <control type="command-button"
                         id="open"
                         commandRef="file.open"
                         order="20"
                         iconRef="open"/>

                <control type="command-button"
                         id="save"
                         commandRef="file.save"
                         order="30"
                         iconRef="save"/>

                <control type="command-button"
                         id="undo"
                         commandRef="edit.undo"
                         order="40"
                         iconRef="undo"/>

                <control type="command-button"
                         id="redo"
                         commandRef="edit.redo"
                         order="50"
                         iconRef="redo"/>

                <control type="command-button"
                         id="regenerate"
                         commandRef="model.regenerate"
                         order="60"
                         iconRef="regenerate"/>

                <!-- windows: view/window management (needs dropdown arrow) -->
                <control type="menu-button"
                         id="windows"
                         commandRef="ui.windowsMenu"
                         order="70"
                         iconRef="windows"/>

                <!-- dropdown: QAT overflow / more -->
                <control type="menu-button"
                         id="dropdown"
                         commandRef="ui.qatMenu"
                         order="80"
                         iconRef="qat"/>
            </area>

            <!-- Center area: document title & environment label -->
            <area id="center" order="20">
                <!-- These are not commands but data bindings -->
                <control type="label"
                         id="label.documentTitle"
                         order="10"
                         binding="document.title"
                         format="%document%"/>

                <control type="label"
                         id="label.workbench"
                         order="20"
                         binding="workbench.displayName"
                         format=" - %workbench%"/>
            </area>

            <!-- Right area: window buttons -->
            <area id="right" order="30">
                <!-- Window system buttons -->
                <control type="window-button"
                         id="minimize"
                         order="10"
                         role="minimize"
                         iconRef="minimize"/>

                <control type="window-button"
                         id="restore"
                         order="30"
                         role="restore"
                         iconRef="restore"/>

                <control type="window-button"
                         id="close"
                         order="40"
                         role="close"
                         iconRef="close"/>
            </area>
        </layout>

